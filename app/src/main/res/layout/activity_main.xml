<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.netbook.senexamen.fr.example.netbook.senexamen.MainActivity"
    android:background="@mipmap/ic_launcher"
    android:backgroundTintMode="screen">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/serie"
        android:entries="@array/spinnerItems"
        android:layout_marginTop="32dp"
        android:spinnerMode="dialog"
        android:layout_below="@+id/welcome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/matiere"
        android:layout_alignEnd="@+id/matiere" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/matiere"
        android:entries="@array/matiere"
        android:spinnerMode="dialog"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/serie"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/welcome"
        android:layout_alignEnd="@+id/welcome" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/annee"
        android:entries="@array/annee"
        android:spinnerMode="dialog"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/matiere"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/matiere"
        android:layout_alignEnd="@+id/matiere" />

    <TextView
        android:text="Bienvenue dans l'application SenExamen veuillez choisir votre serie, la matiere et l'année du baccalauréat que vous voulez voir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/welcome"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        android:textStyle="bold"
        android:elegantTextHeight="true"
        android:textColorLink="@color/back"
        android:textAlignment="center"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <Button
        android:text="Valider"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_x="106dp"
        android:layout_y="344dp"
        android:id="@+id/valider"
        android:onClick="StartActivite"
        android:layout_below="@+id/annee"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

</RelativeLayout>
